<!DOCTYPE html>
<html lang="nb">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Legg til ny WCAG vurdering">
    <title>Legg til vurdering - WCAG</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <a href="#main-content" class="skip-link">Hopp til hovedinnhold</a>
    
    <header role="banner">
        <h1>WCAG Tilgjengelighetsvurderinger</h1>
    </header>

    <nav role="navigation" aria-label="Hovednavigasjon">
        <a href="/">Alle vurderinger</a>
        <a href="/help">Hjelp</a>
        <a href="/faq">FAQ</a>
        <% if (user) { %>
            <a href="/add">+ Legg til vurdering</a>
            <% if (user.role === 'admin') { %>
                <a href="/admin/reports">Rapporter</a>
            <% } %>
            <a href="/logout">Logg ut</a>
        <% } else { %>
            <a href="/login">Logg inn</a>
            <a href="/register">Registrer</a>
        <% } %>
    </nav>

    <main id="main-content" role="main">
        <section class="form-section">
            <h2>Legg til ny vurdering</h2>
            
            <form action="/add" method="POST">
                <div class="form-group">
                    <label for="websiteName">Navn p√• nettsted</label>
                    <input type="text" id="websiteName" name="websiteName" required placeholder="Eksempel: Min Nettside">
                </div>
                
                <div class="form-group">
                    <label for="websiteUrl">Nettsted URL</label>
                    <input type="url" id="websiteUrl" name="websiteUrl" required placeholder="https://example.com" oninput="updatePreview()">
                    <span class="help-text" id="url-help">Skriv inn nettadressen for √• se en forh√•ndsvisning</span>
                </div>
                
                <div class="form-group" id="preview-container" style="display: none;" aria-live="polite">
                    <label id="preview-label">Forh√•ndsvisning</label>
                    <div class="link-preview-card" id="preview-card">
                        <div class="link-preview-icon" id="preview-icon">üåê</div>
                        <div class="link-preview-info">
                            <div class="link-preview-title" id="preview-title">Nettside</div>
                            <div class="link-preview-url" id="preview-url"></div>
                        </div>
                        <a id="preview-link" href="#" class="link-preview-btn" target="_blank" rel="noopener noreferrer">
                            √Öpne ‚Üó
                        </a>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="score">WAVE Score (0-100)</label>
                    <input type="number" id="score" name="score" min="0" max="100" value="100" required aria-describedby="score-help">
                    <span class="help-text" id="score-help">Score basert p√• WAVE-evaluasjon (0-100). H√∏yere er bedre.</span>
                </div>

                <fieldset class="wave-fieldset">
                    <legend>WAVE Tilgjengelighetsvurdering</legend>
                    <span class="help-text">Fyll inn resultatene fra <a href="https://wave.webaim.org/" target="_blank" rel="noopener noreferrer">WAVE Web Accessibility Evaluation Tool <span class="sr-only">(√•pnes i ny fane)</span></a></span>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="waveErrors">Feil (Errors)</label>
                            <input type="number" id="waveErrors" name="waveErrors" min="0" value="0" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="waveAlerts">Advarsler (Alerts)</label>
                            <input type="number" id="waveAlerts" name="waveAlerts" min="0" value="0" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="waveFeatures">Funksjoner (Features)</label>
                            <input type="number" id="waveFeatures" name="waveFeatures" min="0" value="0" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="waveStructural">Strukturelle elementer</label>
                            <input type="number" id="waveStructural" name="waveStructural" min="0" value="0" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="waveARIA">HTML5 og ARIA</label>
                        <input type="number" id="waveARIA" name="waveARIA" min="0" value="0" required>
                    </div>
                </fieldset>
                
                <div class="form-group">
                    <label for="assessment">WCAG Vurdering</label>
                    <textarea id="assessment" name="assessment" required minlength="10" rows="5" placeholder="Beskriv tilgjengeligheten til nettstedet..." aria-describedby="assessment-help"></textarea>
                    <span class="help-text" id="assessment-help">Minimum 10 tegn. Beskriv nettsidens tilgjengelighet.</span>
                </div>
                
                <div class="form-group">
                    <label for="criteriaChecked">Sjekkliste (valgfritt)</label>
                    <input type="text" id="criteriaChecked" name="criteriaChecked" placeholder="Kriterium 1, Kriterium 2" aria-describedby="criteria-help">
                    <span class="help-text" id="criteria-help">Skriv flere kriterier separert med komma</span>
                </div>
                
                <div class="form-actions">
                    <a href="/" class="cancel-button">Avbryt</a>
                    <button type="submit" class="submit-button">Legg til vurdering</button>
                </div>
            </form>
        </section>
    </main>

    <footer role="contentinfo">
        <p>WCAG vurderingsapplikasjon</p>
    </footer>

    <script>
        function updatePreview() {
            const urlInput = document.getElementById('websiteUrl');
            const previewContainer = document.getElementById('preview-container');
            const previewTitle = document.getElementById('preview-title');
            const previewUrl = document.getElementById('preview-url');
            const previewLink = document.getElementById('preview-link');
            const previewIcon = document.getElementById('preview-icon');
            
            let url = urlInput.value.trim();
            
            // Only show preview if URL looks valid
            if (url && (url.startsWith('http://') || url.startsWith('https://'))) {
                previewContainer.style.display = 'block';
                
                // Extract domain and pathname for display
                let domain = url;
                let pathname = '';
                try {
                    const urlObj = new URL(url);
                    domain = urlObj.hostname;
                    pathname = urlObj.pathname;
                    if (pathname === '/') pathname = '';
                } catch (e) {
                    // Use as-is
                }
                
                // Update preview card
                previewTitle.textContent = document.getElementById('websiteName').value || domain;
                previewUrl.textContent = domain + pathname;
                previewLink.href = url;
                
                // Try to get favicon
                previewIcon.textContent = 'üåê';
                
                // Try to fetch favicon from Google
                const img = new Image();
                img.onload = function() {
                    previewIcon.innerHTML = `<img src="https://www.google.com/s2/favicons?domain=${domain}&sz=64" alt="" style="width:32px;height:32px;">`;
                };
                img.onerror = function() {
                    previewIcon.textContent = 'üåê';
                };
                img.src = `https://www.google.com/s2/favicons?domain=${domain}&sz=64`;
                
            } else {
                previewContainer.style.display = 'none';
            }
        }
    </script>
</body>
</html>

