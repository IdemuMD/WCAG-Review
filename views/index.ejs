<!DOCTYPE html>
<html lang="nb">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="WCAG vurdering av nettsider - Tilgjengelighetsgjennomgang">
    <title>WCAG Vurderinger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>WCAG Tilgjengelighetsvurderinger</h1>
        <nav aria-label="Hovednavigasjon">
            <a href="/add" class="nav-link nav-button">Legg til vurdering</a>
        </nav>
    </header>

    <main>
        <!-- Assessments List -->
        <section aria-labelledby="list-title">
            <h2 id="list-title">Alle vurderinger</h2>
            
            <% if (assessments && assessments.length > 0) { %>
                <div class="cards-grid">
                    <% assessments.forEach(function(assessment) { %>
                        <article class="assessment-card">
                            <header>
                                <h3><%= assessment.websiteName %></h3>
                            </header>

                            <figure>
                                <img src="<%= assessment.imageUrl %>" 
                                     alt="Skjermbilde av <%= assessment.websiteName %> nettside" 
                                     class="card-image">
                            </figure>

                            <div class="card-content">
                                <div class="card-meta">
                                    <span class="username">Av: <%= assessment.username %></span>
                                </div>

                                <section aria-labelledby="assessment-<%= assessment.id %>">
                                    <h4 id="assessment-<%= assessment.id %>">Vurdering</h4>
                                    <p><%= assessment.assessment %></p>
                                </section>

                                <section aria-labelledby="score-<%= assessment.id %>">
                                    <h4 id="score-<%= assessment.id %>">Score</h4>
                                    <p class="score" role="img" aria-label="Score: <%= assessment.score %> av 5">
                                        <% for(var i = 1; i <= 5; i++) { %>
                                            <span class="star <%= i <= assessment.score ? 'filled' : '' %>">★</span>
                                        <% } %>
                                        <span class="score-text">(<%= assessment.score %>/5)</span>
                                    </p>
                                </section>

                                <% if (assessment.criteriaChecked && assessment.criteriaChecked.length > 0) { %>
                                    <section aria-labelledby="criteria-<%= assessment.id %>">
                                        <h4 id="criteria-<%= assessment.id %>">Sjekkliste</h4>
                                        <ul>
                                            <% assessment.criteriaChecked.forEach(function(criterion) { %>
                                                <li><%= criterion %></li>
                                            <% }); %>
                                        </ul>
                                    </section>
                                <% } %>
                            </div>

                            <footer>
                                <a href="<%= assessment.websiteUrl %>" 
                                   class="visit-button" 
                                   target="_blank" 
                                   rel="noopener noreferrer">
                                    Besøk nettsiden
                                </a>
                            </footer>
                        </article>
                    <% }); %>
                </div>
            <% } else { %>
                <p class="no-assessments">Ingen vurderinger tilgjengelig.</p>
            <% } %>
        </section>
    </main>

    <footer class="page-footer">
        <p>WCAG vurderingsapplikasjon</p>
    </footer>
</body>
</html>

